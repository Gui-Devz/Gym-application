{% extends "layout.njk" %}

{% block head %}
    <title>Membros</title>
{% endblock head %}

{% block content %}
    <div class="card">
        <section class="avatar">
        </section>
        <form class="details" method="POST" action="/instructors">
            <h3>Novo Instrutor</h3>
            <div class="item">
                <div>Avatar URL:</div>
                <div><input type="url" name="avatar_url" placeholder="https://" required></div>
            </div>

            <div class="item">
                <div>Instrutor:</div>
                <div><input type="text" name="name" placeholder="Nome do instrutor"></div>
            </div>
            
            <div class="item">
                <div>Sexo:</div>
                <div>
                    <span><input type="radio" name="gender" value="M" checked >Masculino</span>
                    <span><input type="radio" name="gender" value="F">Feminino</span>
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento:</div>
                <div><input type="date" name="birth"></div>
            </div>

            <div class="item">
                <div>Área de atuação:</div>
                <div><input type="text" name="services" placeholder="Separe os serviços por vírgula"></div>
            </div>

            <div class="item">
                <div><button type="submit">Cadastrar</button></div>
            </div>

        </form>
    </div>


{% endblock content %}
